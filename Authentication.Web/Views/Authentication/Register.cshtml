@using System.Text.Encodings.Web

@model Authentication.Web.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

@using (Html.BeginForm("Register", "Authentication", FormMethod.Post))
{
    if (Model != null && !string.IsNullOrWhiteSpace(Model.ValidationError))
    {
        <red>@Model.ValidationError</red>
    }

    @Html.TextBox("EmailAddress", null, new { @class = "form-control", placeholder = "enter email address" })

    <input type="submit" value="Add" />
}

